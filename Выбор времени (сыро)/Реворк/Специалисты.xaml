                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.299"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button Content="Выйти" HorizontalAlignment="Left" Margin="187,213,0,35" Grid.Row="1" Width="55" Background="#FFFF5050" Click="Выйти" Grid.Column="2"/>
