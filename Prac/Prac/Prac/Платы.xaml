<Window x:Class="Prac.Платы"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prac"
        mc:Ignorable="d"
        Title="Платы" Height="450" Width="368">
    <Grid>
        <DataGrid x:Name="dataPlat" d:ItemsSource="{d:SampleData ItemCount=5}" Height="180" VerticalAlignment="Top" MouseUp="dataPlat_MouseUp"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="251,262,0,0" VerticalAlignment="Top" Width="83" Height="24" Click="Button_Click_1"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="111,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="120,350,0,0" VerticalAlignment="Top" Width="102" Height="39" Click="Button_Click"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="33,370,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>

    </Grid>
</Window>
