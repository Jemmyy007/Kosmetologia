        <Button Content="ОТЧЕТ" HorizontalAlignment="Left" Margin="324,365,0,0" VerticalAlignment="Top" Height="38" Width="69"/>
        <Button Content="ВАУЧЕР" HorizontalAlignment="Left" Margin="423,365,0,0" VerticalAlignment="Top" Height="38" Width="70"/>
        <Grid x:Name="border" Grid.Row="2">
            <Border BorderBrush="Black" BorderThickness="1" Background="Gray" Margin="0,422,0,0"/>

            <Label Content="v 0.3.1" HorizontalAlignment="Left" Margin="0,418,0,0" VerticalAlignment="Top" Height="24"/>

        </Grid>
    </Grid>
</Window>
