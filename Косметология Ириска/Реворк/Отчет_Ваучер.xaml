        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Margin="171,334,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="554" TextChanged="TextBox_TextChanged" FontFamily="Dubai Medium"/>
